<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.playdiary.playdiary">

    <application
        android:allowBackup="true"
        android:icon="@drawable/sample_logo_small"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ActivitySplash"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityDefault"
            android:screenOrientation="portrait"
            android:label="PlayDiary"> </activity>
        <activity
            android:name=".ActivitySignUp"
            android:screenOrientation="portrait"
            android:label="Sign Up"
            android:parentActivityName=".ActivityDefault">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ActivityDefault" />
        </activity>
        <activity
            android:name=".ActivitySignIn"
            android:screenOrientation="portrait"
            android:label="Sign In"
            android:parentActivityName=".ActivityDefault">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ActivityDefault" />
        </activity>
        <activity
            android:name=".ActivityFeed"
            android:screenOrientation="portrait"
            android:label="PlayDiary">
        </activity>
        <activity
            android:name=".ActivitySettings"
            android:screenOrientation="portrait"
            android:label="Settings"
            android:parentActivityName=".ActivityFeed">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ActivityFeed" />
        </activity>
    </application>

</manifest>
